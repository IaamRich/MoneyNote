<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoneyNote.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:MoneyNote.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MoneyNote.ViewModels"
    BindingContext="{StaticResource loginViewModel}"
    mc:Ignorable="d">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:LoginViewModel x:Key="loginViewModel" />
            <local:StringToColorConverter x:Key="stringToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <!--  Control to Control  -->
        <!--<Slider
            x:Name="slider"
            Margin="2"
            Maximum="10"
            Minimum="0" />-->
        <Entry Margin="2" Text="{Binding UserName}" />
        <Label
            Margin="2"
            Text="{Binding UserName, Mode=OneWay}"
            TextColor="{Binding UserName, Converter={StaticResource stringToColorConverter}}" />
        <!--<Label
            Margin="2"
            BindingContext="{x:Reference slider}"
            Text="{Binding Path=Value, Mode=TwoWay}" />-->
    </StackLayout>

</ContentPage>
