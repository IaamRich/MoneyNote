<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.HistoryView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:HistoryViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ChangeNotes}" IconImageSource="change_notes.png" />
        <ToolbarItem Command="{Binding ChangeNotesView}" IconImageSource="change_notes_view.png" />
    </ContentPage.ToolbarItems>
    <Grid>
        <StackLayout
            Margin="10,0"
            Spacing="0"
            VerticalOptions="FillAndExpand">
            <Label
                FontSize="Title"
                HorizontalOptions="Center"
                Text="{Binding Strings[last_notes]}" />
            <ListView
                x:Name="historyListView"
                HasUnevenRows="True"
                ItemsSource="{Binding SpendingList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout
                                Margin="0,5"
                                Orientation="Vertical"
                                Spacing="0">
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Micro"
                                        Text="{Binding Path=BindingContext.Strings[history_spent], Source={x:Reference historyListView}}"
                                        VerticalOptions="EndAndExpand" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="{Binding Amount}"
                                        TextColor="{StaticResource BoldLabel}"
                                        VerticalTextAlignment="End" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Micro"
                                        Text="{Binding Path=BindingContext.Strings[history_description], Source={x:Reference historyListView}}"
                                        VerticalOptions="EndAndExpand" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Small"
                                        Text="{Binding WhereText}"
                                        TextColor="{StaticResource BoldLabel}"
                                        VerticalTextAlignment="End" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Micro"
                                        Text="{Binding Path=BindingContext.Strings[history_transaction_date], Source={x:Reference historyListView}}" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Micro"
                                        Text="{Binding TransactionDate}"
                                        TextColor="{StaticResource BoldLabel}" />
                                </StackLayout>

                            </StackLayout>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Frame
            x:Name="changeNotes"
            Padding="0"
            BackgroundColor="{StaticResource AboutBackGround}"
            CornerRadius="0"
            HasShadow="True"
            HeightRequest="200"
            HorizontalOptions="End"
            IsVisible="{Binding IsChangeNotesVisible, Mode=TwoWay}"
             
            VerticalOptions="Start"
            WidthRequest="100">
            <Grid Margin="0,2" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="4,2">
                    <BoxView BackgroundColor="{StaticResource ListBackColor}" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[all]}"
                        VerticalOptions="Center" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Grid.GestureRecognizers>
                </Grid>
                <Grid Grid.Row="1" Margin="4,2">
                    <BoxView BackgroundColor="{StaticResource ListBackColor}" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[income]}"
                        VerticalOptions="Center" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Grid.GestureRecognizers>
                </Grid>
                <Grid Grid.Row="2" Margin="4,2">
                    <BoxView BackgroundColor="{StaticResource ListBackColor}" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[outlay]}"
                        VerticalOptions="Center" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Grid.GestureRecognizers>
                </Grid>
                <Grid Grid.Row="3" Margin="4,2">
                    <BoxView BackgroundColor="{StaticResource ListBackColor}" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[history_savings]}"
                        VerticalOptions="Center" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Grid.GestureRecognizers>
                </Grid>
            </Grid>
            <Frame.Triggers>
                <DataTrigger
                    Binding="{Binding IsChangeNotesVisible}"
                    TargetType="Frame"
                    Value="True">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </Frame.Triggers>
        </Frame>
    </Grid>
</rxui:ReactiveContentPage>
