<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.MainView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:MainViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding AddSalary}"
            IconImageSource="plus.png"
            Text="+" />
    </ContentPage.ToolbarItems>
    <StackLayout
        Margin="0"
        BackgroundColor="{StaticResource ListBackColor}"
        Spacing="0">
        <Grid Margin="10,5,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label
                FontSize="Title"
                HorizontalOptions="Center"
                Text="{Binding Strings[app_name]}" />
            <Image
                Margin="0,30,0,0"
                Aspect="AspectFit"
                HeightRequest="100"
                Source="logo.png"
                VerticalOptions="Start" />
        </Grid>
        <StackLayout Margin="10,0" Orientation="Horizontal">
            <StackLayout
                Grid.Column="0"
                Margin="10,0"
                Orientation="Vertical">
                <Label Text="{Binding Strings[current_cash]}" />
                <Label Text="{Binding CurrentCash}" />
            </StackLayout>
            <StackLayout
                Grid.Column="1"
                Margin="10,0"
                HorizontalOptions="EndAndExpand"
                Orientation="Vertical">
                <Label HorizontalOptions="EndAndExpand" Text="{Binding Strings[current_card]}" />
                <Label HorizontalOptions="EndAndExpand" Text="{Binding CurrentCard}" />
            </StackLayout>
        </StackLayout>
        <StackLayout
            Grid.Column="1"
            HorizontalOptions="Center"
            Orientation="Vertical">
            <Label HorizontalOptions="Center" Text="{Binding Strings[current]}" />
            <Label
                FontSize="Large"
                HorizontalOptions="Center"
                Text="{Binding CurrentBill}"
                TextColor="{StaticResource MainGreen}" />
        </StackLayout>
        <StackLayout Margin="10,0" VerticalOptions="CenterAndExpand">
            <Frame>
                <StackLayout>
                    <Frame>
                        <Entry
                            x:Name="entrySpend"
                            FontSize="Medium"
                            Keyboard="Numeric"
                            Placeholder="{Binding Strings[enter_spent_amount]}"
                            Text="{Binding SpendValue}" />
                    </Frame>
                    <StackLayout Orientation="Horizontal">
                        <Button
                            BackgroundColor="{StaticResource MainGreen}"
                            Command="{Binding AddSpend}"
                            CornerRadius="10"
                            HorizontalOptions="FillAndExpand"
                            Text="{Binding Strings[commit]}"
                            TextColor="White" />
                    </StackLayout>

                </StackLayout>
            </Frame>
            <Frame Padding="10">
                <StackLayout>
                    <Label HorizontalOptions="CenterAndExpand" Text="{Binding Strings[last_spent_money]}" />
                    <ListView
                        x:Name="spendingListView"
                        BackgroundColor="{StaticResource BackgroundWhite}"
                        ItemsSource="{Binding SpendingList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <StackLayout Orientation="Horizontal">
                                            <Label FontSize="Medium" Text="{Binding Amount}" />
                                            <Label FontSize="Medium" Text="{Binding WhereText}" />
                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </Frame>
        </StackLayout>


        <StackLayout
            Margin="10"
            HorizontalOptions="EndAndExpand"
            Orientation="Horizontal"
            VerticalOptions="EndAndExpand">
            <Label Text="{Binding Strings[share]}" />
            <Label Margin="10,0" Text="{Binding Strings[vote]}" />
        </StackLayout>
    </StackLayout>
</rxui:ReactiveContentPage>
