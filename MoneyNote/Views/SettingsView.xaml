<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.SettingsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:SettingsViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                Margin="10,5,10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        Command="{Binding ResetAll}"
                        Text="{Binding Strings[reset_all]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="1"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="0">
                    <Label
                        FontSize="Title"
                        Text="Sounds"
                        VerticalOptions="Center" />
                    <CheckBox HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="2"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="0">
                    <Label
                        FontSize="Title"
                        Text="Choose Language"
                        VerticalOptions="Center" />
                    <!--  Language Collection  -->
                    <ScrollView
                        x:Name="CollectionsList"
                        Orientation="Horizontal">
                        <StackLayout
                            Margin="0,0,0,0"
                            BindableLayout.ItemsSource="{Binding LanguagesList}"
                            Orientation="Horizontal">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <ImageButton
                                        x:Name="img11"
                                        Margin="0,0,0,5"
                                        Aspect="AspectFill"
                                        BorderColor="Black"
                                        HeightRequest="60"
                                        HorizontalOptions="Fill"
                                        Source="{Binding Image}"
                                        VerticalOptions="Fill"
                                        WidthRequest="60">
                                        <!--<ImageButton.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.SelectCollectionCommand, Source={x:Reference CollectionsList}}" CommandParameter="{Binding CollectionId}" />
                                        </ImageButton.GestureRecognizers>-->
                                    </ImageButton>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="3"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[set_month_outlay]}"
                        VerticalOptions="Center" />
                    <Entry
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="4"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        BackgroundColor="{StaticResource MainGreen}"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding Strings[update]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
