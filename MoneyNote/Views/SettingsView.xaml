<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.SettingsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
    x:Name="this"
    x:TypeArguments="local:SettingsViewModel">
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource ListBackColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <!--  1  -->
            <Frame
                Grid.Row="0"
                Margin="10,5,10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="0">
                    <Label
                        FontSize="Title"
                        Text="{Binding Strings[sounds]}"
                        VerticalOptions="Center" />
                    <CheckBox HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <!--  2  -->
            <Frame
                Grid.Row="1"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout
                    x:Name="chooseLanguageStack"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <Label
                        x:Name="languageLabel"
                        FontSize="Title"
                        HorizontalOptions="Start"
                        Text="{Binding Strings[choose_language]}"
                        VerticalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="iconLanguage_Clicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <!--  Language Collection  -->
                    <ImageButton
                        x:Name="iconLanguage"
                        Aspect="AspectFit"
                        Clicked="iconLanguage_Clicked"
                        HorizontalOptions="EndAndExpand"
                        Source="{Binding LanguageImage}"
                        VerticalOptions="FillAndExpand" />
                    <ScrollView
                        x:Name="CollectionsList"
                        Padding="0,0,0,3"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="False"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            x:Name="bindingStack"
                            BindableLayout.ItemsSource="{Binding LanguagesList}"
                            Orientation="Horizontal">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <ImageButton
                                        x:Name="img11"
                                        Aspect="AspectFit"
                                        Clicked="iconLanguage_Clicked"
                                        Command="{Binding Path=BindingContext.ImageCommand, Source={x:Reference bindingStack}}"
                                        CommandParameter="{Binding Id}"
                                        Source="{Binding Image}" />
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </Frame>
            <!--  3  -->
            <Frame
                Grid.Row="2"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        Command="{Binding ResetAll}"
                        Text="{Binding Strings[reset_all]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <!--  4  -->
            <Frame
                Grid.Row="3"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        Command="{Binding GoAccount}"
                        Text="{Binding Strings[set_every_places]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <!--  5  -->
            <Frame
                Grid.Row="4"
                Margin="10,0,10,5"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        Command="{Binding OffAds}"
                        Text="{Binding Strings[dis_add]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
