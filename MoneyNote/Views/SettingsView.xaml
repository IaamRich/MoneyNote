<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.SettingsView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
    x:Name="this"
    x:TypeArguments="local:SettingsViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  To do Method After initialization elements sizes of the page  -->
            <skia:SKCanvasView x:Name="canvasView" PaintSurface="CanvasView_PaintSurface" />
            <Frame
                Grid.Row="0"
                Margin="10,5,10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        Command="{Binding ResetAll}"
                        Text="{Binding Strings[reset_all]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="1"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="0">
                    <Label
                        FontSize="Title"
                        Text="Sounds"
                        VerticalOptions="Center" />
                    <CheckBox HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="2"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout
                    x:Name="chooseLanguageStack"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <Label
                        x:Name="languageLabel"
                        FontSize="Title"
                        HorizontalOptions="Start"
                        Text="Choose Language"
                        VerticalOptions="CenterAndExpand" />
                    <!--  Language Collection  -->
                    <ImageButton
                        x:Name="img11"
                        Aspect="AspectFit"
                        Clicked="img11_Clicked"
                        HorizontalOptions="EndAndExpand"
                        Source="{Binding LanguageImage}"
                        VerticalOptions="FillAndExpand" />
                    <ScrollView
                        x:Name="CollectionsList"
                        Padding="0,0,0,3"
                        HorizontalOptions="FillAndExpand"
                        IsVisible="False"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            x:Name="bindingStack"
                            BindableLayout.ItemsSource="{Binding LanguagesList}"
                            Orientation="Horizontal">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <ImageButton
                                        x:Name="img11"
                                        Aspect="AspectFit"
                                        Clicked="img11_Clicked"
                                        Command="{Binding Path=BindingContext.ImageCommand, Source={x:Reference bindingStack}}"
                                        CommandParameter="{Binding Id}"
                                        Source="{Binding Image}">
                                        <!--<ImageButton.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding BindingContext.SelectCollectionCommand, Source={x:Reference CollectionsList}}" CommandParameter="{Binding CollectionId}" />
                                        </ImageButton.GestureRecognizers>-->

                                    </ImageButton>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>

                        </StackLayout>
                        <ScrollView.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="img11_Clicked" />
                        </ScrollView.GestureRecognizers>
                    </ScrollView>

                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="3"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[set_month_outlay]}"
                        VerticalOptions="Center" />
                    <Entry
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="4"
                Margin="10,0"
                HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <Button
                        BackgroundColor="{StaticResource MainGreen}"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand"
                        Text="{Binding Strings[update]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
