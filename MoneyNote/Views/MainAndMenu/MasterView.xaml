<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveMasterDetailPage
    x:Class="MoneyNote.MasterView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:tint="clr-namespace:MoneyNote.MarkupExtensions"
    xmlns:touch="clr-namespace:TouchEffect;assembly=TouchEffect"
    x:TypeArguments="local:MasterViewModel">
    <MasterDetailPage.Master>
        <!--  No need reference to strings[]  -->
        <ContentPage Title="Master">
            <StackLayout Spacing="0">
                <!--<Grid
                    x:Name="menuTitle"
                    ColumnDefinitions="*,36"
                    ColumnSpacing="20"
                    RowDefinitions="56">
                    <BoxView Grid.ColumnSpan="2" BackgroundColor="{StaticResource MainGreen}" />
                    <Grid
                        Grid.Column="0"
                        ColumnDefinitions="40,*"
                        ColumnSpacing="20">
                        <Image x:Name="IconImage" />
                        <Label
                            x:Name="TitleLabel"
                            Grid.Column="1"
                            FontFamily="MainFontBold"
                            FontSize="Medium"
                            HorizontalOptions="Start"
                            Text="{Binding Strings[menu]}"
                            TextColor="White"
                            VerticalOptions="CenterAndExpand" />
                    </Grid>
                    <Image
                        Grid.Column="1"
                        Margin="0,0,18,0"
                        Source="hamburger_white.png" />
                </Grid>-->

                <ListView
                    x:Name="MyListView"
                    BackgroundColor="{StaticResource MainGreen}"
                    HasUnevenRows="True"
                    SeparatorVisibility="None"
                    VerticalOptions="Start">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:MasterCell />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackLayout
                    Margin="0,0,0,5"
                    BackgroundColor="{StaticResource MainGreen}"
                    Orientation="Horizontal">
                    <StackLayout Margin="10,0,0,0" Orientation="Vertical">
                        <Grid
                            Padding="25,0,0,0"
                            BackgroundColor="{StaticResource MainGreen}"
                            HeightRequest="200"
                            HorizontalOptions="Start"
                            VerticalOptions="EndAndExpand">
                            <Image
                                Margin="-500,0,0,5"
                                HeightRequest="12"
                                HorizontalOptions="Center"
                                Source="steps.png"
                                VerticalOptions="End" />
                            <Image
                                Aspect="AspectFit"
                                HeightRequest="90"
                                HorizontalOptions="Center"
                                Source="logo.png"
                                VerticalOptions="End" />

                        </Grid>
                        <Label
                            FontSize="Small"
                            TextColor="{StaticResource BackgroundWhite}"
                            VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding Strings[app_name]}" />
                                        <Span Text=" " />
                                        <Span ForegroundColor="{StaticResource AboutBackGround}" Text="{Binding Strings[about_version]}" />
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label
                            FontSize="Small"
                            HorizontalOptions="StartAndExpand"
                            Text="{Binding Strings[menu_footer]}"
                            TextColor="{StaticResource BackgroundWhite}" />
                    </StackLayout>

                    <StackLayout
                        Margin="5"
                        HorizontalOptions="EndAndExpand"
                        Orientation="Horizontal"
                        Spacing="10"
                        VerticalOptions="EndAndExpand">

                        <tint:TintedCachedImage
                            touch:TouchEff.Command="{Binding ShareCommand}"
                            touch:TouchEff.PressedScale="2"
                            touch:TouchEff.RegularAnimationDuration="200"
                            HeightRequest="30"
                            Source="share.png"
                            TintColor="{StaticResource BackgroundWhite}"
                            WidthRequest="30" />
                        <tint:TintedCachedImage
                            touch:TouchEff.Command="{Binding LikeCommand}"
                            touch:TouchEff.PressedScale="2"
                            touch:TouchEff.RegularAnimationDuration="200"
                            HeightRequest="30"
                            Source="star.png"
                            TintColor="{StaticResource BackgroundWhite}"
                            WidthRequest="30" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <rxui:ReactiveMasterDetailPage.Detail>
        <rxui:RoutedViewHost x:Name="ViewHost" BarBackgroundColor="{StaticResource MainGreen}" />
    </rxui:ReactiveMasterDetailPage.Detail>

</rxui:ReactiveMasterDetailPage>
