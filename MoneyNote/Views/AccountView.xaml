<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.AccountView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MoneyNote.Controls"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:AccountViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="30*" />
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        Margin="0,0,0,5"
                        FontAttributes="Bold"
                        FontSize="Small"
                        HorizontalOptions="Center"
                        Text="Current Bill:"
                        VerticalOptions="Start" />
                    <controls:AccountSwitchFrame
                        Command="{Binding MyCashCommand}"
                        HorizontalOptions="FillAndExpand"
                        Money="{Binding MyCash, Mode=TwoWay}"
                        Text="{Binding Strings[my_cash]}"
                        VerticalOptions="FillAndExpand" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[my_card]}"
                        VerticalOptions="FillAndExpand" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[my_current]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        Margin="0,0,0,5"
                        FontAttributes="Bold"
                        FontSize="Small"
                        HorizontalOptions="Center"
                        Text="Income/Outlay:"
                        VerticalOptions="Start" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[month_income]}"
                        VerticalOptions="FillAndExpand" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[month_outlay]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="2"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        Margin="0,0,0,5"
                        FontAttributes="Bold"
                        FontSize="Small"
                        HorizontalOptions="Center"
                        Text="Savings:"
                        VerticalOptions="Start" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[month_saving]}"
                        VerticalOptions="FillAndExpand" />
                    <controls:AccountSwitchFrame
                        HorizontalOptions="FillAndExpand"
                        Money="9999999"
                        Text="{Binding Strings[all_saving]}"
                        VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
