<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.AccountView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:AccountViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="30*" />
            </Grid.RowDefinitions>
            <Frame
                Grid.Row="0"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="StartAndExpand"
                        Text="Current Bill:"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_cash]}"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_card]}"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_current]}"
                        VerticalOptions="StartAndExpand" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="StartAndExpand" />

                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="StartAndExpand"
                        Text="Income/Outlay:" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_income]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_outlay]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            <Frame
                Grid.Row="2"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout Spacing="0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="StartAndExpand"
                        Text="Savings:" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_saving]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[all_saving]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>

        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
