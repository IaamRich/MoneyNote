<?xml version="1.0" encoding="utf-8" ?>
<rxui:ReactiveContentPage
    x:Class="MoneyNote.AccountView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyNote"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    x:TypeArguments="local:AccountViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="30*" />
                <RowDefinition Height="30*" />
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_cash]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_card]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[my_current]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
            <StackLayout
                Grid.Row="1"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_income]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_outlay]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
            <StackLayout
                Grid.Row="2"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[month_saving]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
                <StackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="{Binding Strings[all_saving]}"
                        VerticalOptions="Center" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="Title"
                        HorizontalOptions="Center"
                        Text="9999999"
                        VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</rxui:ReactiveContentPage>
